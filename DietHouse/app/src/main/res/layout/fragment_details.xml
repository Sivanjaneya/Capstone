                android:id="@+id/details_target_view"
                android:layout_toRightOf="@+id/details_status_label"
                android:layout_below="@+id/details_status_view"
                android:textColor="#ffffff"
                android:textStyle="bold"
               android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"/>
            <TextView
